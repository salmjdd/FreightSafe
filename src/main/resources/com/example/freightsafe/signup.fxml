<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="321.0" prefWidth="255.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.freightsafe.signupController">
   <children>
      <Text fx:id="text" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="I am a:" textAlignment="CENTER" wrappingWidth="255.0">
         <font>
            <Font name="OCR A Extended" size="24.0" />
         </font>
      </Text>
      <RadioButton fx:id="driverButton" layoutX="101.0" layoutY="85.0" mnemonicParsing="false" text="Driver">
         <toggleGroup>
            <ToggleGroup fx:id="driverAgent" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="agentButton" layoutX="101.0" layoutY="110.0" mnemonicParsing="false" text="Agent" toggleGroup="$driverAgent" />
      <TextField id="txtUserID" fx:id="userText" layoutX="41.0" layoutY="176.0" promptText="Create User ID">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordText" layoutX="41.0" layoutY="216.0" promptText="Create Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Button id="btnLogin" layoutX="105.0" layoutY="259.0" mnemonicParsing="false" onAction="#signupHandler" text="Sign Up" />
   </children>
</AnchorPane>
